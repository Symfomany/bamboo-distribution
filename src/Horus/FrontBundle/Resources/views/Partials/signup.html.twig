
{% block signup %}

    <!-- Modal Signup start -->
    <div class="modal signUpContent fade" id="ModalSignup" tabindex="-1" role="dialog" >
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"> &times; </button>
                    <h3 class="modal-title-site text-center" > {{ "Register"|trans }} </h3>
                </div>
                <div class="modal-body">
                    <div class="control-group"> <a class="fb_button btn  btn-block btn-lg " href="#"> {{ "Signup with Facebook"|trans }} </a> </div>
                    <h5 style="padding:10px 0 10px 0;" class="text-center"> OR </h5>
                    <div class="form-group reg-username">
                        <div >
                            <input name="login"  class="form-control input"  size="20" placeholder="{{ "Enter Username"|trans }}" type="text">
                        </div>
                    </div>
                    <div class="form-group reg-email">
                        <div >
                            <input name="reg"  class="form-control input"  size="20" placeholder="{{ "Enter Email"|trans }}" type="text">
                        </div>
                    </div>
                    <div class="form-group reg-password">
                        <div >
                            <input name="password"  class="form-control input"  size="20" placeholder="{{ "Enter Password"|trans }}" type="password">
                        </div>
                    </div>
                    <div class="form-group">
                        <div >
                            <div class="checkbox login-remember">
                                <label>
                                    <input name="rememberme" id="rememberme" value="forever" checked="checked" type="checkbox">
                                    {{ "Remember Me"|trans }} </label>
                            </div>
                        </div>
                    </div>
                    <div >
                        <div >
                            <input name="submit" class="btn  btn-block btn-lg btn-primary" value="{{ "Register"|trans }}" type="submit">
                        </div>
                    </div>
                    <!--userForm-->

                </div>
                <div class="modal-footer">
                    <p class="text-center"> Already member? <a data-toggle="modal"  data-dismiss="modal" href="#ModalLogin"> {{ "Sign in"|trans }} </a> </p>
                </div>
            </div>
            <!-- /.modal-content -->

        </div>
        <!-- /.modal-dialog -->

    </div>
    <!-- /.ModalSignup End -->
{% endblock %}
